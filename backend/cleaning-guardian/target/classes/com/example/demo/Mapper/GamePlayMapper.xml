<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.GamePlayMapper">




<!-- 스테이지 클리어 후 stageClear에 정보 입력. -->
<insert id="stageClear" parameterType="com.example.demo.dto.GameClearDTO">
	INSERT INTO "game_clear" (
		"email",
		"stage_idx",
		"success_yn",
		"created_at"
	) VALUES (
		#{email},
		#{stageIdx},
		#{successYn},
		SYSDATE
	)
</insert>

<!-- 스테이지 클리어 정보 추가 해야하는가? -->
    <select id="getStageStatus" resultType="com.example.demo.vo.StagesVO">
    SELECT *
  FROM "stages"
  WHERE "stage_idx" = #{stage_idx}
    </select>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
           "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ItemMapper">

    <select id="getAlluserItems" resultType="com.example.demo.vo.ItemsVO">
		SELECT * FROM "user_items"
    </select>
    
	<select id="getItemDetailByIdx" parameterType="long" resultType="com.example.demo.vo.ItemsVO">
	  SELECT "user_items"."user_item_idx",
	         "user_items"."email",
	         "user_items"."item_idx",
	         "user_items"."item_type",
	         "user_items"."is_used",
	         "user_items"."created_at",
	         "game_items"."item_name",
	         "game_items"."item_desc",
	         "game_items"."item_price",
	         "game_items"."price_type"
	  FROM "user_items"
	  JOIN "game_items" ON "user_items"."item_idx" = "game_items"."item_idx"
	  WHERE "user_items"."item_idx" = #{itemIdx}
	</select>

</mapper>
